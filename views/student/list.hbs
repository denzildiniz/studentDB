<div class="container">
    <div class="row">
        <div class="col-md-4 d-flex align-items-center">
            <h6><a href="/students"><i class="bi bi-plus-square"></i> Create New Student</a></h6>
        </div>
        <div class="col-md-8">

            <h1 class="text-center">List Of All Students</h1>
        </div>
    </div>

</div>

<table class="table table-striped">
    <thead>
        <th>name</th>
        <th>email</th>
        <th>options</th>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>
                <a href="/students/{{this._id}}"><i class="bi bi-pencil"></i></a>
                <a href="/students/delete/{{this._id}}" onclick="return confirm('lets delete this..?');"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>